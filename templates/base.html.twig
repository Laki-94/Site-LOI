<!DOCTYPE html>
<html>

  <head>
    <meta charset="UTF-8">
    <title>
      {% block title %}
        Welcome!
      {% endblock %}
    </title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <!------ Include the above in your HEAD tag ---------->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
    crossorigin="anonymous"></script>
    <script src="https://js.stripe.com/v3/"></script>
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
      {{ encore_entry_link_tags('app') }}
    {% endblock %}

  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">

          {% if is_granted('ROLE_ADMIN') %}
            <a class="navbar-brand">
              <img src="{{ asset('/img/entete.png') }}" alt="logo LOI" height="50">
            </a>
          {% endif %}

          {% if is_granted('ROLE_ADMIN')==false %}
            <a class="navbar-brand">
              <img src="{{ asset('/img/entete.png') }}" alt="logo LOI" height="90">
            </a>
          {% endif %}

          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ms-auto">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/">
                  Accueil
                                
                </a>
              </li>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                  Nos produits
                                
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">

                  <div class="dropdown" id="dropdown">

                    <div class="dropdown-content">
                      {# extensions twig#}
                      {% for cat in cats.getCategories %}
                        <a href="{{ path('app_categories_show', {'id': cat.id}) }}">
                          {{ cat.nom }}
                        </a>
                      {% endfor %}
                    </div>
                  </div>
                </ul>
              </li>

              <li class="nav-item">
                <a class="nav-link" href="#">Blog</a>
              </li>

              {% if is_granted('ROLE_USER')==false %}
                <li class="nav-item">
                  <a class="nav-link" href="{{ path('app_register') }}">
                    S'inscrire
                                  
                  </a>
                </li>
              {% endif %}

              {% if is_granted('ROLE_USER')==false %}
                <li class="nav-item">
                  <a class="nav-link" href="{{ path('app_login') }}">
                    Connexion
                                  
                  </a>
                </li>
              {% endif %}

              {% if is_granted('ROLE_USER') %}
                <li class="nav-item">
                  <a class="nav-link" href="{{ path('app_logout') }}">
                    Déconnexion
                                  
                  </a>
                </li>
              {% endif %}

              {% if is_granted('ROLE_USER') %}{% endif %}

              {% if is_granted('ROLE_USER')==false %}
                <li class="nav-item">
                  <a class="nav-link" href="{{ path('app_login') }}"></a>
                </li>
              {% endif %}

              {% if is_granted('ROLE_USER') %}
                <li class="nav-item">
                  <a class="nav-link" href="{{ path('app_user_show') }}">
                    Mon profile
                  </a>
                </li>
                <li>
                  <a href="{{ path('app_cart_show') }}">
                      <img src="{{ asset('/img/panier1.png') }}" alt="logo panier1" height="30">
                  </a>
                </li>
                {% if is_granted('ROLE_USER') %}
                    {# <a href="{{ path('app_cart_show') }}">
                      <img src="{{ asset('/img/panier1.png') }}" alt="logo panier1" height="30">
                    </a> #}
                 {% endif %}

                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}

                  <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="{{ path('app_admin_produits_index') }}" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                      Gestion des produits
                                    
                    </a>
                    <ul class="dropdown-menu">
                      <li>
                        <a class="dropdown-item" href="{{ path('app_admin_produits_index') }}">
                          Voir les produits
                                            
                        </a>
                      </li>
                      <li>
                        <a class="dropdown-item" href="{{ path('app_admin_produits_new') }}">
                          Nouveau produit
                                            
                        </a>
                      </li>
                      <li>
                        <a class="dropdown-item" href="{{ path('app_admin_categories_index') }}">
                          Gestion categories
                                            
                        </a>
                      </li>
                    </ul>
                  </li>
                  <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                      Gestion des utilisateurs
                                    
                    </a>
                    <ul class="dropdown-menu">
                      <li>
                        <a class="dropdown-item" href="{{ path('app_admin_index') }}">
                          Voir / modifier les utilisateurs
                                            
                        </a>
                      </li>
                      <li>
                        <a class="dropdown-item" href="{{ path('app_admin_new') }}">
                          Nouveau utilisateurs
                                            
                        </a>
                      </li>
                    </ul>
                    <a href="{{ path('app_cart_show') }}">
                      <img src="{{ asset('/img/panier1.png') }}" alt="logo panier1" height="30">
                    </a>
                  {% endif %}
                </ul>
              </div>
            </div>
          </nav>
        </header>

        {% block body %}{% endblock %}

        <!-- Remove the container if you want to extend the Footer to full width. -->
        <div class=" class='row'">
          <!-- Footer -->
          <footer class="text-center text-lg-start text-white" style="background-color: #4b6b5c">
            <!-- Grid container -->
            <div class="container p-4 pb-0">
              <!-- Section: Links -->
              <section class="">
                <!--Grid row-->
                <div class="row">
                  <!-- Grid column -->
                  <div class="col-md-3 col-lg-3 col-xl-3 mx-auto mt-3">
                    <h6 class="text-uppercase mb-4 font-weight-bold">
                      Suivez Nous
                    </h6>

                    <!-- Facebook -->
                    <a href="https://www.facebook.com/groups/609824523450854" target="_blank" class="btnfb btn-outline-light btn-floating m-1" class="text-white" role="button">
                      <i class="fab fa-facebook-f"></i>
                    
                    </a>

                  </div>

                  <!-- Grid column -->
                  <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mt-3">
                    <h6 class="text-uppercase mb-4 font-weight-bold">
                      Informations
                    </h6>
                    <p>
                      <a class="text-white">
                        Qui sommes nous
                      </a>
                    </p>
                    <p>
                      <a class="text-white">
                        FAQ
                      </a>
                    </p>
                    <p>
                      <a class="text-white">
                        CGV
                      </a>
                    </p>
                    <p>
                      <a class="text-white">
                        CGU
                      </a>
                    </p>
                  </div>
                  <!-- Grid column -->
                  <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mt-3">
                    <h6 class="text-uppercase mb-4 font-weight-bold">
                      Contact
                    </h6>
                    <p>
                      <a href="{{ path('app_contact') }}"  class="text-white" role="button">
                      <i class="fa-solid fa-envelope"></i>
                      Nous contacter
                    </p>

                  </div>
                <!-- Grid column -->
                </div>
              <!--Grid row-->
              </section>
              <!-- Section: Links -->

              <hr class="my-3">

              <!-- Section: Copyright -->
              <section class="p-3 pt-0">
                <div class="row d-flex align-items-center">
                  <!-- Grid column -->
                  <div class="col-md-7 col-lg-12 text-center text-md-start">
                    <!-- Copyright -->
                    <div class="p-3">
                      © 2023 Copyright:
                      <a class="text-white" href="/">
                        Les Oiseaux Insectivores
                      </a>
                    </div>
                  </div>
                </div>
              </section>
            </div>
          </footer>
        </div>



        <!-- End of .container -->
        <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
        <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
      </body>
    </body>
    {% block javascripts %}
      {{ encore_entry_script_tags('app') }}
      {# extensions twig pour les dropdowns #}
      <script> let drop = new Axentix.dropdown('dropdown') </script>
    {% endblock %}
  </body>
</html>

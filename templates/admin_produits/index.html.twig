{% extends 'base.html.twig' %}

{% block title %}Produits index{% endblock %}

{% block body %}
    <h1 class="text-center">Liste des produits</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Quantite</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Nomimage</th>
                <th>Catégories</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.quantite }}</td>
                <td>{{ produit.nom }}</td>
                <td>{{ produit.description }}</td>
                <td>{{ produit.prix }}</td>
                <td><img src="{{ asset('img/') ~ produit.nomimage }}" class="card-img-top w-25 h-25" alt="..."><td>
                <td>{{ produit.categorie }}</td>
                <td>
                    <a href="{{ path('app_admin_produits_show', {'id': produit.id}) }}">Voir</a>
                    <a href="{{ path('app_admin_produits_edit', {'id': produit.id}) }}">Modifier</a>
                    {{ include('admin_produits/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_produits_new') }}">Créer un nouveau produit</a>
{% endblock %}

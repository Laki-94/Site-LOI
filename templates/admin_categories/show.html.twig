{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
    <h1>Categories</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ category.nom }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_categories_index') }}">Retour a la liste des catégories</a>
    <br>
    <a href="{{ path('app_admin_categories_edit', {'id': category.id}) }}">Modifier la catégorie</a>

    {{ include('admin_categories/_delete_form.html.twig') }}
{% endblock %}
